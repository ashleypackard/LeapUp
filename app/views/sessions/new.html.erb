<%= content_for(:title, "Sign In") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="account_form">
			<span class="form_header">Sign In</span>
				<%= form_for(:session, url: login_path) do |f| %>
						
					<%= f.label :email, 'Email: ' %>
					
					<%= f.email_field :email, value: (params[:email] ? params[:email] : "" ), required: true, placeholder: "smithj@wit.edu", class: 'form-control'%>	

					<%= f.label :password, 'Password: ' %>
					<%= f.password_field :password, required: true, placeholder: "******", class: 'form-control' %>
					
					<%= f.label :remember_me, class: "checkbox inline" do %>
	        	<%= f.check_box :remember_me %>
	       	  <span>Remember me on this computer</span>
	      	<% end %>

					<%= f.submit "Log In", class: "btn btn-primary" %>

				<% end %>
		</div>
	</div>
</div>