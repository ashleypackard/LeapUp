<!DOCTYPE html>
<html>
<head>
    <%= render "html_head", title: full_title(yield(:title)) %>
</head>
<body>

  <%= render "header_navbar" %>
  <div class="container">
  	<% flash.each do |message_type, message| %>
    	<div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
  	<%= yield %>
    <%= render "footer" %>
    <%= debug(params) if Rails.env.development? %>
  </div>

</body>
</html>
