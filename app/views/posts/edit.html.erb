<%= content_for(:title, "Edit Post") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="post_form">
			<span class="form_header">Edit Post</span>
				<%= form_for [@account, @post], html: {id: "edit_post_form"} do |f| %>
					<% if @post.errors.any? %>
				    <div id="error_explanation">
				      <h2>
				        <%= pluralize(@post.errors.count, "error") %> prohibited
				        this account from being saved:
				      </h2>
				      <ul>
				        <% @post.errors.full_messages.each do |msg| %>
				          <li><%= msg %></li>
				        <% end %>
				      </ul>
				    </div>
				    <% end %>
			<%= f.label :title, "Title: " %>
			<%= f.text_field :title, required: true, class: 'form-control' %> 
			<%= f.label :locaiton, "Location: " %>
			<%= f.text_field :location, required: true, class: 'form-control' %> 
			<%= f.label :meeting_date, "Meeting Date: " %>
			<%= f.date_select :meeting_date, required: true, order: [:day, :month, :year], class: 'form-control' %> 
			<%= f.label :meeting_time, "Meeting Time: " %>
			<%= f.time_select :meeting_time, required: true, ignore_date: true, class: 'form-control' %> 
			<%= f.label :category_id, "Category: " %>
			<%= f.collection_select :category_id, Category.all, :id, :name, {class: 'form-control', readonly: true} %> 
			<%= f.label :body, "Body: " %>
			<%= f.text_area :body, required: true, class: 'form-control' %> 

			<%= f.submit class: "btn btn-default btn btn-primary" %>


		<% end %>

			</div>
	</div>
</div>