<%= content_for(:title, "Make a New Post") %>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="post_form">
			<span class="form_header">Make a Post</span>
				<%= form_for [@account, @post], html: {id: "new_post_form"} do |f| %>
					<% if @post.errors.any? %>
				    <div id="error_explanation">
				      <h2>
				        <%= pluralize(@post.errors.count, "error") %> prohibited
				        this account from being saved:
				      </h2>
				      <ul>
				        <% @post.errors.full_messages.each do |msg| %>
				          <li><%= msg %></li>
				        <% end %>
				      </ul>
				    </div>
				    <% end %>
			<%= f.label :title, "Title: " %>
			<%= f.text_field :title, required: true, class: 'form-control' %> 
			<%= f.label :locaiton, "Location: " %>
			<%= f.text_field :location, required: true, class: 'form-control' %> 
			<%= f.label :meeting_date, "Meeting Date: " %>
			<%= f.date_select :meeting_date, {order: [:day, :month, :year]}, {class: "form-control"} %> 
			<%= f.label :meeting_time, "Meeting Time: " %>
			<%= f.time_select :meeting_time, {ignore_date: true, :ampm => true, :default => 0.days.from_now.in_time_zone('Eastern Time (US & Canada)')}, {class: "form-control"} %> 
			<%= f.label :category_id, "Category: " %>
			<%= f.collection_select :category, Category.all, :id, :name, {prompt: "Select a Category"}, {class: "form-control"} %> 
			<%= f.label :body, "Body: " %>
			<%= f.text_area :body, required: true, class: "form-control" %> 

			<%= f.submit class: "btn btn-default btn btn-primary" %>


		<% end %>

			</div>
	</div>
</div>